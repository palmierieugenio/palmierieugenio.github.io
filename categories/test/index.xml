      <description>&lt;p&gt;PROVA PROVA&lt;/p&gt;
&lt;pre class=&#34;r&#34;&gt;&lt;code&gt;atteso&amp;lt;-function(prove){

consecutivi&amp;lt;-NULL
scores&amp;lt;-NULL

for(i in 1:prove)
{
tiri&amp;lt;-1
punteggio&amp;lt;-2

  while(rbinom(1,1,.5)==1)
   {
    tiri&amp;lt;-tiri+1
    punteggio&amp;lt;-2^tiri
    }
consecutivi[i]&amp;lt;-tiri
scores[i]&amp;lt;-punteggio

}
somma&amp;lt;-sum(consecutivi)
atteso&amp;lt;-somma/prove
return(atteso)
}


test&amp;lt;-function(prove) {
test&amp;lt;-NULL

for(i in 1:prove) {
test[i]&amp;lt;-atteso(i)
}
return(test)
}


plot(test(1000))&lt;/code&gt;&lt;/pre&gt;
